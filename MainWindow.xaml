<Window x:Class="SantaElizabeteKarklina.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib" 
        xmlns:local="clr-namespace:SantaElizabeteKarklina"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,8,8" Width="499">
                <TextBox Height="20" VerticalAlignment="Top" Width="312"></TextBox>
                <Button x:Name="Delete" Content="Delete" Height="20" VerticalAlignment="Top" Width="94" Click="Delete_Click"/>
                <Button x:Name="Update" Content="Update XML" Height="20" VerticalAlignment="Top" Width="94" Click="button_Click"/>
            </StackPanel>
            <DataGrid ItemsSource="{Binding Customers}" />
            
        </DockPanel>
    </Grid>
</Window>
